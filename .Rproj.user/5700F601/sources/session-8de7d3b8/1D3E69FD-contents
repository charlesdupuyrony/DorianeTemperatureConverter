#' Fahrenheit conversion
#'
#' Convert degrees Fahrenheit temperatures to degrees Celsius
#' @param fahrenheit  The temperature in degrees Fahrenheit
#' @return The temperature in degrees Celsius
#' @examples 
#' temp1 <- Fahrenheit_to_Celsius(50);
#' temp2 <- Fahrenheit_to_Celsius( c(50, 63, 23) );
#' @export
Fahrenheit_to_Celsius <- function(fahrenheit){
  celcius <- (fahrenheit - 32) * 5/9;
  return (celcius);
}


#' Celsius conversion
#'
#' Convert degrees Celsius temperatures to degrees Fahrenheit
#' @param celsius The temperature in degrees Celsius
#' @return The temperature in degrees Fahrenheit
#' @examples 
#' temp1 <- Celsius_to_Fahrenheit(22);
#' temp2 <- Celsius_to_Fahrenheit( c(-2, 12, 23) );
#' @export 
Celsius_to_Fahrenheit <- function(celcius){
  fahrenheit <- (celcius * 9/5) + 32;
  return (fahrenheit);
}

